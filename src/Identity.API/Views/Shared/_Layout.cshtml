@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@*
    _Layout.cshtml - 主布局文件
    为Identity服务提供统一的页面框架和样式
    用于所有身份验证相关页面
*@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

    <title>Identity | AdventureWorks</title>

    @* 网站图标设置 *@
    <link rel="icon" type="image/x-icon" href="favicon.png">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.png" />

    @* CSS样式引用 *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @* 顶部横幅区域 *@
    <div class='eshop-banner'>
        <img role="presentation" src="/images/banner.png" />
    </div>
    
    @* 网站头部导航区域 *@
    <div class="eshop-header">
        <div class="eshop-header-container">
            <nav class="eshop-header-navbar">
                <a href="@Configuration["WebAppClient"]" class='logo logo-header'>
                    <img alt="AdventureWorks" src='/images/logo-header.svg' />
                </a>
            </nav>
      </div>
    </div>

    @* 页面主体内容区域 - 渲染各个页面的具体内容 *@
    <div class="content">
        @RenderBody()
    </div>

    @* 网站页脚区域 *@
    <footer class='eshop-footer'>
        <div class='eshop-footer-content'>
            <div class='eshop-footer-row'>
                <img role="presentation" src='/images/logo-footer.svg' class='logo logo-footer' />
                <p>© AdventureWorks</p>
            </div>
        </div>
    </footer>

    @* JavaScript库引用 *@
    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* 允许各页面添加自定义脚本 *@
    @RenderSection("scripts", required: false)
</body>
</html>
