@model ErrorViewModel

@{
    // 从Model中获取错误信息
    var error = Model?.Error?.Error;  // 主要错误码或消息
    var errorDescription = Model?.Error?.ErrorDescription;  // 详细错误描述
    var request_id = Model?.Error?.RequestId;  // 请求ID，用于跟踪和调试
}

<div class="error-page">
    <div class="lead">
        <h1>Error</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="alert alert-danger">
                Sorry, there was an error

                @if (error != null)
                {
                    <strong>
                        <em>
                            : @error
                        </em>
                    </strong>

                    if (errorDescription != null)
                    {
                        <div>@errorDescription</div>
                    }
                }
            </div>

            @if (request_id != null)
            {
                <div class="request-id">Request Id: @request_id</div>
            }
        </div>
    </div>
</div>
